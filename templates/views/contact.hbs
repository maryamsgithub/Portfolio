    {{>header}}

    <div class="projectContainer">
        <h4 class="mb-2" style="text-align: center;margin-top: 45px;">Contact</h4>
        <div id="form">
            <div class="form-group ">
                <form id="contact-form" method="post" role="form" >
                    <div class="messages"></div>
                    <div class="controls">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{!-- <label for="form_name">First name *</label> --}}
                                    
                                    <input id="name" type="name" name="name" class="form-control"
                                        required="required" placeholder="First Name" 
                                        data-error="First name is required.">
                                        
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{!-- <label for="form_lastname">Last name *</label> --}}
                                    <input id="lastname" type="lastname" name="lastname" class="form-control"
                                         required="required" placeholder="Last Name"
                                        data-error="Last name is required.">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        {{!-- </div> --}}
                        {{!-- <div class="row"> --}}
                            <div class="col-md-9">
                                <div class="form-group">
                                    <label for="form_email"> </label>
                                    <input id="email" type="email" name="email" class="form-control"
                                        required="required" placeholder="Email"
                                        data-error="Valid email is required.">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        {{!-- </div> --}}
                        {{!-- <div class="row"> --}}
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="form_subject"></label>
                                    <input id="subject" name="subject" class="lg-textarea form-control"
                                        required="required" placeholder="Subject"
                                        data-error="Subject is required."></input>
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        {{!-- </div> --}}
                        {{!-- <div class="row"> --}}
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="form_message"> </label>
                                    <textarea id="text" name="text" class="form-control" 
                                        rows="4" required="required" placeholder="Message for me"
                                        data-error="Please, leave us a message."></textarea>
                                    <div class="help-block with-errors"></div>
                                </div>
                                <div class="col-md-12" id="sub">
                                <input type="submit" class="btn btn-danger btn-send btn-pill" value="Send message">
                                </div>
                            </div>
                        {{!-- </div> --}}
                </form>
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script>
        $("form").on("submit", e => {
            e.preventDefault();
            const name = $("#name")
                .val()
                .trim();
            const lastname = $("#lastname")
                .val()
                .trim();
            const subject = $("#subject")
                .val()
                .trim();
            const email = $("#email")
                .val()
                .trim();
            const text = $("#text")
                .val()
                .trim();
            const data = {
                name,
                lastname,
                subject,
                email,
                text
            };
            $.post("/email", data)
                .then(() => {
                    window.location.href = "/email/sent";
                })
                .catch(() => {
                    window.location.href = "/error";
                });
        });
    </script>

    {{>footer}}

